document.addEventListener('DOMContentLoaded', function() {
  
  // 1. AÇILIR MENÜ (TOGGLE) MANTIĞI
  const toggleBtn = document.getElementById('toggleShare');
  const menu = document.getElementById('shareMenu');

  toggleBtn.addEventListener('click', function(e) {
    e.stopPropagation(); // Tıklamanın dışarıya yayılmasını engelle
    // 'active' sınıfını ekle/çıkar (CSS'de display:block yapar)
    menu.classList.toggle('active');
  });

  // Sayfanın herhangi bir yerine tıklayınca menüyü kapat
  document.addEventListener('click', function(e) {
    if (!menu.contains(e.target) && !toggleBtn.contains(e.target)) {
      menu.classList.remove('active');
    }
  });


  // 2. POP-UP PAYLAŞIM PENCERESİ MANTIĞI (Senin Kodun)
  const shareButtons = document.querySelectorAll('.sharing-platform-button');
  
  shareButtons.forEach(button => {
    button.addEventListener('click', function(e) {
      e.preventDefault();
      
      // PAGE_URL yazan yeri gerçek link ile değiştiriyoruz
      let rawHref = this.getAttribute('data-href');
      let currentUrl = window.location.href;
      let shareUrl = rawHref.replace('PAGE_URL', currentUrl);
      
      if (shareUrl) {
        const width = 600;
        const height = 450;
        const left = (screen.width / 2) - (width / 2);
        const top = (screen.height / 2) - (height / 2);
        
        window.open(shareUrl, 'BloggerShare', 
          'width=' + width + ',height=' + height + ',left=' + left + ',top=' + top + 
          ',toolbar=0,status=0,menubar=0,location=0,resizable=1,scrollbars=1');
          
        // Linke tıklandıktan sonra menüyü kapat
        menu.classList.remove('active');
      }
    });
  });
});
//]]>
</script>

